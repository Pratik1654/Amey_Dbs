<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Equipment Table</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Equipment Table</h1>
        <a href="/" class="btn btn-primary mb-3">Back to Menu</a>
        <script>
            function toggleAddEquipmentForm() {
                const form = document.getElementById('addEquipmentForm');
                form.style.display = form.style.display === 'none' ? 'block' : 'none';
            }
        </script>
        
        <a href="#" class="btn btn-success mb-3" onclick="toggleAddEquipmentForm()">Add Equipment</a>
        
        <div id="addEquipmentForm" style="display:none;" class="mb-4">
            <form action="/add-equipment" method="POST" class="row g-3">
                <div class="col-md-3">
                    <input type="number" name="model_id" class="form-control" placeholder="Model ID" required>
                </div>
                <div class="col-md-3">
                    <input type="text" name="company_name" class="form-control" placeholder="Company Name" required>
                </div>
                <div class="col-md-3">
                    <input type="text" name="boom_length" class="form-control" placeholder="Boom Length" required>
                </div>
                <div class="col-md-3">
                    <input type="date" name="date_of_manufacturing" class="form-control" required>
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Model ID</th>
                    <th>Company Name</th>
                    <th>Boom Length</th>
                    <th>Date of Manufacturing</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% equipment.forEach(function(item) { %>
                    <tr>
                        <td><%= item.model_id %></td>
                        <td><%= item.company_name %></td>
                        <td><%= item.boom_length %></td>
                        <td><%= item.date_of_manufacturing %></td>
                        <td>
                            <form action="/delete-equipment/<%= item.model_id %>" method="POST" style="display:inline;">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                            <form action="/edit-equipment/<%= item.model_id %>" method="POST" style="display:inline;">
                                <button class="btn btn-warning">Edit</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>